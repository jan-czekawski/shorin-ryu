<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Profile</h1>
    <div class="card">
      <%= show_avatar(@user, 200) %>
      <div class="card-body">
        <h5 class="card-title">User's login: <%= @user.login %></h5>
        <h5 class="card-title">User created: <%= @user.created_at %></h5>
        <p class="card-text"><p>
        <% if current_user?(@user) %>
          <%= link_to "Edit", edit_user_registration_path(@user), class: "btn btn-warning" %>
        <% end %>
        <% if current_user.admin? %>
          <%= link_to "Delete", user_path(@user), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>