<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Users</h1>
  </div>
</div>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-lg-3 col-md-6 my-3">
      <div class="card">
        <%= show_avatar(user) %>
        <div class="card-body">
          <h5 class="card-title"><%= extract_name(user) %></h5>
          <p class="card-text"><p>
          <% if current_user?(user) %>
            <%= link_to "Edit", edit_user_registration_path, class: "btn btn-warning" %>
          <% end %>
          <%= link_to "Show", user_path(user), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>