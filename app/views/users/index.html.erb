<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Users</h1>
  </div>
</div>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-3 my-3">
      <div class="card">
        <%= show_avatar(user) %>
        <div class="card-body">
          <h5 class="card-title"><%= user.email %></h5>
          <p class="card-text"><p>
          <% if current_user == user %>
            <%= link_to "Edit user info", edit_user_registration_path, class: "btn btn-warning" %>
          <% else %>
            <%= link_to "Show user info", "#", class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>