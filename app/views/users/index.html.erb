<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Users</h1>
  </div>
</div>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4 my-3">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= user.email %></h5>
          <p class="card-text"><p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  <% end %>
</div>