.row.justify-content-center
  .col-md-6
    %h1 Users
.row
  %section.col-md-8
    - @users.each do |user|
      .card.mb-3.user-card
        .row.align-items-center
          .col-md-3.col-xl-2.image
            = show_avatar(user)
          .col-md-9.col-xl-10
            .card-body
              %h5.card-title.clearfix
                %span.login= user.login
                %span.buttons
                  - if current_user?(user)
                    = link_to "Edit", edit_user_registration_path, class: "btn btn-warning"
                  = link_to "Show", user_path(user), class: "btn btn-info"
  %aside.col-md-4
    = render "shared/cart"