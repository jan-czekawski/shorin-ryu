.row.justify-content-center
  .col-md-6.col-lg-4
    %h1 
      Checkout
.row
  %section.col-md-8
    %main
      Items in your checkout:
      - @cart.cart_items.each do |c_item|
        %div{id: "#{c_item.item.id}"}
          %b
            = c_item.item.name
          %p
            = c_item.item.price.to_s + " PLN "
            &times;
            %span{id: "quantity_#{c_item.item.id}"}= c_item.quantity
          %p
            = link_to "Delete item", cart_item_path(c_item.cart, c_item), class: "btn btn-danger btn-sm" ,method: :delete, data: { confirm: "Are you sure?" }, remote: true
      %h4
        = "Total price: "
      %span#total_price
        = @cart.sum_price
    = form_for @checkout do |f|
      = render "shared/errors", obj: @checkout
      .form-check
        = f.radio_button :delivery_method, 1, class: "form-check-input"
        = f.label :delivery_method_1, "Standard delivery", class: "form-check-label"
      .form-check
        = f.radio_button :delivery_method, 2, class: "form-check-input"
        = f.label :delivery_method_2, "Express delivery", class: "form-check-label"
      
      
      
      