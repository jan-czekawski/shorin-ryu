- flash.each do |name, message|
  %div{class: "#{@flash_row}"}
    - name == "alert" ? alert_name = "danger" : alert_name = "success"
    .alert.my-3{class: "alert-#{alert_name} #{@flash_col}"}
      %a.close{href: "#", "data-dismiss": "alert"}
        &times;
      = content_tag :div, message, id: "flash_#{name}" if message.is_a?(String)