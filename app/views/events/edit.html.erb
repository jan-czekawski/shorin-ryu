<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Edit <%= @event.name %></h1>
    <%= form_for @event do |f| %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      
      <%= fields_for "event[address]" do |adr_form| %>
        <div class="form-group">
          <%= adr_form.label :city %>
          <%= adr_form.text_field :city %>
        </div>
        
        <div class="form-group">
          <%= adr_form.label :street %>
          <%= adr_form.text_field :street %>
        </div>  
        
        <div class="form-group">
          <%= adr_form.label :flat_number %>
          <%= adr_form.text_field :flat_number %>
        </div>          
        
        <div class="form-group">
          <%= adr_form.label :zip_code %>
          <%= adr_form.text_field :zip_code %>
        </div>          
      <% end %>
      
      <%= f.submit %>
    <% end %>
  </div>
</div>