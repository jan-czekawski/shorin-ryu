#carouselExampleIndicators.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "1", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "2", "data-target" => "#carouselExampleIndicators"}
  .carousel-inner
    .carousel-item.active
      = image_tag("karate_1.jpg", class: "d-block w-100", alt: "Boy performing kata")
      .carousel-caption.d-none.d-md-block
        %h3 EVENTS
        %h5
          Find most popular shorin-ryu events. Read participants feedback and opinions. 
    .carousel-item
      = image_tag("karate_2.jpg", class: "d-block w-100", alt: "Girls fighting in safety gear")
      .carousel-caption.d-none.d-md-block
        %h3 FIGHTERS
        %h5
          Explore other karate fighters. Get to know them, follow their path and directions.
    .carousel-item
      = image_tag("karate_3.jpg", class: "d-block w-100", alt: "Men training high kicks")
      .carousel-caption.d-none.d-md-block
        %h3 ITEMS
        %h5
          Find one of the rarest items in our shop. All of them are of the highest quality. You can confirm it by reading others reviews.
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleIndicators", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleIndicators", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next
